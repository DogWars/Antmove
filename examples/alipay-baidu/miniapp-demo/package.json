{
    "name": "miniapp-demo",
    "version": "1.0.18",
    "scripts": {
        "dev": "npm run dev:inner",
        "build": "npm run build:inner",
        "dev:outer": "cross-env OUTPUT_ENV=outer gulp dev",
        "dev:inner": "cross-env OUTPUT_ENV=inner gulp dev",
        "build:outer": "cross-env OUTPUT_ENV=outer gulp build",
        "build:inner": "cross-env OUTPUT_ENV=inner gulp build",
        "doc": "cross-env OUTPUT_ENV=outer gulp generateDocs",
        "lint": "gulp lint",
        "lint:fix": "gulp lint:fix",
        "tslint": "gulp tslint",
        "tslint:fix": "gulp tslint:fix",
        "eslint": "gulp eslint",
        "eslint:fix": "gulp eslint:fix",
        "stylelint": "gulp stylelint",
        "stylelint:fix": "gulp stylelint:fix",
        "jsonlint": "gulp jsonlint",
        "jsonlint:fix": "gulp jsonlint:fix",
        "tslint-file": "tslint",
        "eslint-file": "eslint",
        "jsonlint-file": "prettier-custom --check",
        "stylelint-file": "stylelint",
        "stylelint-file:fix": "stylelint --fix",
        "tslint-file:fix": "tslint --fix",
        "eslint-file:fix": "eslint --fix",
        "jsonlint-file:fix": "prettier-custom --write",
        "prettier": "prettier-custom --write",
        "typedoc": "gulp typedoc",
        "format:tools": "prettier-custom --write './*.{js,json,md,yaml}'&& eslint --fix ./*.js",
        "qrcode": "qrcode-tool",
        "updateQrcode": "npm run updateQrcode",
        "uploadFiles": "gulp uploadFiles"
    },
    "tnpm": { "mode": "npm", "lockfile": "enable" },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@ali/stylelint-config-ali": "^0.1.1",
        "@ali/tslint-config-ali": "^0.3.3",
        "@alife/lion-sdk": "^1.0.0",
        "@alife/qrcode-tool": "^0.2.1",
        "@alipay/tinyapp-types": "^0.0.7",
        "@babel/core": "^7.4.3",
        "@banyaner/prettier-custom": "^1.18.0",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "babel-eslint": "^10.0.1",
        "babel-plugin-module-resolver": "^3.2.0",
        "commander": "^2.20.0",
        "cross-env": "^5.2.0",
        "del": "^4.1.0",
        "eslint": "^5.16.0",
        "eslint-config-ali": "^6.0.0",
        "eslint-plugin-import": "^2.17.1",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^1.6.0",
        "gulp": "^4.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-cli": "^2.1.0",
        "gulp-eslint": "^5.0.0",
        "gulp-if": "^2.0.2",
        "gulp-preprocess": "^3.0.2",
        "gulp-prettier": "^2.1.0",
        "gulp-rename": "^1.4.0",
        "gulp-replace": "^1.0.0",
        "gulp-sass": "^4.0.2",
        "gulp-stylelint": "^9.0.0",
        "gulp-tslint": "^8.1.4",
        "gulp-typedoc": "^2.2.2",
        "gulp-typescript": "^5.0.1",
        "gulp-watch": "^5.0.1",
        "husky": "^1.3.1",
        "lodash": "^4.17.11",
        "node-sass": "^4.11.0",
        "request": "^2.88.0",
