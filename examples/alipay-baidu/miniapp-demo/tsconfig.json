{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es6", "es2017", "dom"],
    "removeComments": true,
    "noLib": false,
    "noEmitOnError": false,
    "allowJs": false,
    "types": ["@alipay/tinyapp-types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
